<Window x:Class="agent_simulation_ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:agent_simulation_ui"
        mc:Ignorable="d"
        Title="Agent Simulation" Height="650" Width="1000"
        Background="#FF1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="20,15">
            <TextBlock Text="🎮 AGENT SIMULATION" FontSize="24" FontWeight="Bold" 
                       Foreground="White" HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Background="#FF2D2D30" Foreground="White" Margin="10">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Background" Value="#FF2D2D30"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="15,10"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="BorderBrush" Value="#FF555555"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border" Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}"
                                        Margin="2,0">
                                    <ContentPresenter ContentSource="Header" 
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#FF007ACC"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#FF404040"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>
            
            <!-- Setup Tab -->
            <TabItem Header="🚀 Setup">
                <Grid Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Scenario Selection -->
                    <GroupBox Grid.Column="0" Header="📋 Scenario Selection" Foreground="White" 
                              Margin="0,0,10,0" Padding="15" Background="#FF404040">
                        <StackPanel>
                            <TextBlock Text="Choose your scenario:" Margin="0,0,0,10" Foreground="White" FontWeight="SemiBold"/>
                            <ComboBox Name="ScenarioComboBox" Height="35" FontSize="14" 
                                      Background="White" Foreground="Black" BorderBrush="#FF007ACC"/>
                            <TextBlock Name="ScenarioDescription" Margin="0,15,0,0" 
                                       TextWrapping="Wrap" Foreground="White" FontStyle="Normal" FontSize="13"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Team Configuration -->
                    <GroupBox Grid.Column="1" Header="👥 Team Configuration" Foreground="White" 
                              Margin="10,0,0,0" Padding="15" Background="#FF404040">
                        <StackPanel>
                            <TextBlock Text="Team Size:" Margin="0,0,0,5" Foreground="White" FontWeight="SemiBold"/>
                            <Slider Name="TeamSizeSlider" Minimum="2" Maximum="6" Value="4" 
                                    TickFrequency="1" IsSnapToTickEnabled="True" Height="25"/>
                            <TextBlock Name="TeamSizeLabel" Text="4 Agents" HorizontalAlignment="Center" 
                                       Foreground="White" FontWeight="SemiBold" FontSize="14"/>
                            
                            <CheckBox Name="ShowTipsCheckBox" Content="Show gameplay tips" 
                                      Foreground="White" Margin="0,20,0,0" IsChecked="True" FontWeight="SemiBold"/>
                            
                            <Button Name="StartSimulationButton" Content="🚀 Start Simulation" 
                                    Height="40" Margin="0,30,0,0" Background="#FF007ACC" 
                                    Foreground="White" FontWeight="Bold" FontSize="16"
                                    Click="StartSimulationButton_Click"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!-- Simulation Tab -->
            <TabItem Header="🎯 Simulation" Name="SimulationTab" IsEnabled="False">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Status Bar -->
                    <Border Grid.Row="0" Background="#FF3E3E40" Padding="15" Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Life Support" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                                <TextBlock Name="LifeSupportText" Text="100%" Foreground="#FF00FF00" 
                                           FontWeight="Bold" FontSize="16"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Defense" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                                <TextBlock Name="DefenseText" Text="50%" Foreground="#FFFFFF00" 
                                           FontWeight="Bold" FontSize="16"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Time Remaining" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                                <TextBlock Name="TimeText" Text="30:00" Foreground="#FFFF6600" 
                                           FontWeight="Bold" FontSize="16"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Status" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                                <TextBlock Name="StatusText" Text="Running" Foreground="White" 
                                           FontWeight="Bold" FontSize="16"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Simulation Output -->
                    <ScrollViewer Grid.Row="1" Background="#FF252525" Padding="15">
                        <TextBlock Name="SimulationOutput" Text="Simulation will appear here..." 
                                   Foreground="White" FontFamily="Consolas" FontSize="12"
                                   TextWrapping="Wrap"/>
                    </ScrollViewer>
                    
                    <!-- Controls -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" 
                                Margin="0,10,0,0">
                        <Button Name="PauseButton" Content="⏸️ Pause" Width="80" Height="30" 
                                Margin="5" Background="#FFFF6600" Foreground="White"/>
                        <Button Name="ResumeButton" Content="▶️ Resume" Width="80" Height="30" 
                                Margin="5" Background="#FF00FF00" Foreground="Black"/>
                        <Button Name="StopButton" Content="⏹️ Stop" Width="80" Height="30" 
                                Margin="5" Background="#FFFF4444" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <!-- Tips Tab -->
            <TabItem Header="💡 Tips">
                <ScrollViewer Margin="20" Background="#FF252525">
                    <StackPanel Margin="15">
                        <TextBlock Text="💡 GAMEPLAY TIPS" FontSize="18" FontWeight="Bold" 
                                   Foreground="White" Margin="0,0,0,15"/>
                        
                        <TextBlock Text="🏥 Life Support Management" FontWeight="SemiBold" 
                                   Foreground="#FF00FF00" Margin="0,10,0,5" FontSize="14"/>
                        <TextBlock Text="• Higher life support levels provide better task efficiency bonuses"
                                   Foreground="White" Margin="20,0,0,5" FontSize="13"/>
                        <TextBlock Text="• Maintenance tasks help reduce life support decay"
                                   Foreground="White" Margin="20,0,0,10" FontSize="13"/>
                        
                        <TextBlock Text="🛡️ Defense Systems" FontWeight="SemiBold" 
                                   Foreground="#FFFFFF00" Margin="0,10,0,5" FontSize="14"/>
                        <TextBlock Text="• Completing defense tasks reduces damage from attacks"
                                   Foreground="White" Margin="20,0,0,5" FontSize="13"/>
                        <TextBlock Text="• Defense tasks are crucial for survival"
                                   Foreground="White" Margin="20,0,0,10" FontSize="13"/>
                        
                        <TextBlock Text="⚡ Task Strategies" FontWeight="SemiBold" 
                                   Foreground="#FFFF6600" Margin="0,10,0,5" FontSize="14"/>
                        <TextBlock Text="• Choose effort levels wisely - higher effort means more progress"
                                   Foreground="White" Margin="20,0,0,5" FontSize="13"/>
                        <TextBlock Text="• Focus on tasks that complement your team's strengths"
                                   Foreground="White" Margin="20,0,0,5" FontSize="13"/>
                        <TextBlock Text="• Check colony stats to see your current capabilities"
                                   Foreground="White" Margin="20,0,0,10" FontSize="13"/>
                        
                        <TextBlock Text="🤝 Teamwork" FontWeight="SemiBold" 
                                   Foreground="#FFFF4444" Margin="0,10,0,5" FontSize="14"/>
                        <TextBlock Text="• Work together - some tasks benefit from previous completions"
                                   Foreground="White" Margin="20,0,0,5" FontSize="13"/>
                        <TextBlock Text="• Communication and coordination are key to success"
                                   Foreground="White" Margin="20,0,0,5" FontSize="13"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#FF2D2D30" Padding="10">
            <TextBlock Name="StatusBarText" Text="Ready to start simulation" 
                       Foreground="White" HorizontalAlignment="Center" FontWeight="SemiBold"/>
        </Border>
    </Grid>
</Window>
